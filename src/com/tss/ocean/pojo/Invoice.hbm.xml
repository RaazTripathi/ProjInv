<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.tss.ocean.pojo.Invoice" table="invoice" catalog="invmgmt">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="date" type="date">
            <column name="bill_date" />
        </property>
        <property name="buyerName" type="string">
            <column name="buyername" length="100" />
        </property>
        <property name="address" type="string">
            <column name="address" />
        </property>
        <property name="boxMode" type="java.lang.Boolean">
            <column name="boxMode" />
        </property>
        <set name="items" cascade="none" table="invoiced_item" lazy="false">
            <key column="invoice_id" />
            <many-to-many column="item_id" class="com.tss.ocean.pojo.Item" lazy="false" />
        </set>
        <property name="discount" type="java.lang.Float">
            <column name="discount" />
        </property>
        <property name="tax" type="java.lang.Float">
            <column name="tax" />
        </property>
        <property name="grossAmount" type="java.lang.Float">
            <column name="amount" />
        </property>
    </class>
</hibernate-mapping>